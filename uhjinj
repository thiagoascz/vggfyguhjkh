    <script>
        // Configura√ß√µes
        const startDate = new Date(2024, 4, 7); // 7 de maio de 2024
        const emojis = ['‚ù§Ô∏è'];
        const carouselInterval = 5000; // Tempo de exibi√ß√£o de cada imagem (5 segundos)

        // Fun√ß√£o para calcular o tempo de namoro
        function calculateTime() {
            const now = new Date();
            const diff = now - startDate;

            const years = now.getFullYear() - startDate.getFullYear();
            const months = now.getMonth() - startDate.getMonth();
            const days = now.getDate() - startDate.getDate();
            const hours = now.getHours();
            const minutes = now.getMinutes();

            // Ajuste para meses e dias negativos
            let adjustedMonths = months;
            let adjustedDays = days;

            if (months < 0) {
                adjustedMonths = 12 + months;
            }
            if (days < 0) {
                const lastDayOfMonth = new Date(now.getFullYear(), now.getMonth(), 0).getDate();
                adjustedDays = lastDayOfMonth + days;
            }

            return { years, months: adjustedMonths, days: adjustedDays, hours, minutes };
        }

        // Fun√ß√£o para atualizar a mensagem
        function updateMessage() {
            const { years, months, days, hours, minutes } = calculateTime();
            const messageElement = document.getElementById('message');
            messageElement.innerHTML = `
                Oi, amor! Desculpe a demora üòä<br><br>
                Hoje celebramos <strong>${years} ano${years !== 1 ? 's' : ''},
                ${months} mes${months !== 1 ? 'es' : ''},
                ${days} dia${days !== 1 ? 's' : ''},
                ${hours} hora${hours !== 1 ? 's' : ''} e
                ${minutes} minuto${minutes !== 1 ? 's' : ''}</strong> de uma jornada incr√≠vel juntos.<br><br>
                Cada momento ao seu lado refor√ßa o quanto sou grato por tudo que constru√≠mos. Aqui est√° para muitos cap√≠tulos futuros desta hist√≥ria que amo escrever com voc√™. Te amo! ‚ù§Ô∏è
            `;
        }

        // Fun√ß√£o para criar emojis
        function createEmoji() {
            const emoji = document.createElement('div');
            emoji.className = 'emoji';
            emoji.textContent = emojis[Math.floor(Math.random() * emojis.length)];
            emoji.style.left = `${Math.random() * 100}vw`;
            emoji.style.animationDuration = `${Math.random() * 3 + 5}s`;
            document.querySelector('.emoji-rain').appendChild(emoji);

            setTimeout(() => emoji.remove(), 10000);
        }

        // Fun√ß√£o para inicializar o carrossel
        function initCarousel() {
            const carousel = document.querySelector('.carousel');
            const images = document.querySelectorAll('.carousel img');
            let currentIndex = 0;

            setInterval(() => {
                currentIndex = (currentIndex + 1) % images.length;
                const offset = -currentIndex * 100; // Move o carrossel para a pr√≥xima imagem
                carousel.style.transform = `translateX(${offset}%)`;

                // Reinicia o carrossel ap√≥s a √∫ltima imagem
                if (currentIndex === images.length - 1) {
                    setTimeout(() => {
                        carousel.style.transition = 'none'; // Remove a transi√ß√£o
                        carousel.style.transform = 'translateX(0)'; // Volta ao in√≠cio
                        setTimeout(() => {
                            carousel.style.transition = 'transform 0.5s ease-in-out'; // Restaura a transi√ß√£o
                        }, 50);
                    }, carouselInterval);
                }
            }, carouselInterval);
        }

        // Inicializa√ß√£o
        function init() {
            initCarousel(); // Inicializa o carrossel
            setInterval(createEmoji, 300); // Inicia a chuva de emojis
            setInterval(updateMessage, 1000); // Atualiza a mensagem
            updateMessage(); // Exibe a mensagem inicial

            // Controle de √°udio
            const musicButton = document.getElementById('music-button');
            const music = document.getElementById('background-music');

            musicButton.addEventListener('click', () => {
                music.play();
                musicButton.style.display = 'none';
            });

            try {
                music.play();
            } catch (e) {
                musicButton.style.display = 'flex';
            }
        }

        init();
    </script>
